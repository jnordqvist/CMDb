<Window x:Class="BattelShipBoardGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattelShipBoardGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="112,133,0,0" Text="{Binding WizardName, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="{Binding WizardName}" HorizontalAlignment="Left" Margin="112,191,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.43,0.502"/>
        <Button Content="Skapa trollkarl" Command="{Binding CreateWizardCommand}" HorizontalAlignment="Left" Margin="472,142,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
