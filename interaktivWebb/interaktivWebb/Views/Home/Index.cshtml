@{
    ViewData["Title"] = "Home Page";
}
@model HomeViewModel


<div id="container">
    <section id="banner">
        <div class="spinnerContent">
            <h1 class="title">@Html.DisplayFor(model => model.Movies[0].Title)</h1>
            <p id="like">@Html.DisplayFor(model => model.cmdbMovies.Where(x => x.imdbID == model.Movies[0].imdbId).First().numberOfLikes)</p>
            <p>@Html.DisplayFor(model=>model.Movies[0].plot)</p>
            <img src="@Html.DisplayFor(model=>model.Movies[0].poster)" />
            @foreach (var rating in Model.Movies[0].ratings)
            {
                <div>
                    <p>@rating.Source:</p>
                    <p>@rating.Value</p>
                </div>
            }

            <p class="plot">
                <a class="expandPlot" href="#">Read More</a>
            </p>
            <div class="ratings">
                <div class="ratingContainer">
                    <img src="Resources/Images/cmdblogo.png">
                    <p class="CMDbRating"></p>
                </div>
                <div class="ratingContainer">
                    <img src="Resources/Images/imdblogo.png">
                    <p class="IMDbRating"></p>
                </div>

            </div>
            <div class="rank"></div>
        </div>
    </section>
    <section id="topList">
        @foreach (var movie in Model.Movies.Skip(1))
        {
        <div class="movieContainer">
            <h2 class="">@movie.Title</h2>
            <p class="likes">@Model.cmdbMovies.Where(x => x.imdbID == movie.imdbId).First().numberOfLikes</p>
            <p>@movie.plot</p>
            <img src="@movie.poster" />
            @foreach (var rating in movie.ratings)
            {
                <div>
                    <p>@rating.Source:</p>
                    <p>@rating.Value</p>
                </div>
            }
            
                <button class="likeBtn" type="submit">like</button>
            
        </div>
        }
    </section>
    

</div>


