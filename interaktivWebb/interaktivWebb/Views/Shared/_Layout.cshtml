
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="~/css/site.css" rel="stylesheet"  type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <Header>
        <nav>
            <img id="burger" src="~/images/burgerClosed.svg" />
            <a id="logo" href="#this">CMDb</a>
            <div id="searchContainer">
                <form asp-action="Movies" asp-controller="DetailPage" method="get">
                    <input id="searchField" name="id" type="text" placeholder="Search" required />
                    <input type="submit" />
                </form>
                <img id="search" src="~/images/magnifyingGlass.svg" />
            </div>
            <div id="burgermenu">
                <ul>
                    <li>
                        <a class="navlink" href="#">Hi</a>
                    </li>
                    <li>
                        <a class="navlink" href="#">Helllo</a>
                    </li>
                    <li>
                        <a class="navlink" href="#">Henlo</a>
                    </li>
                </ul>

            </div>
            <div id="navlinks">
                <ul>
                    <li>
                        <a class="navlink" href="#">Hi</a>
                    </li>
                    <li>
                        <a class="navlink" href="#">Helllo</a>
                    </li>
                    <li>
                        <a class="navlink" href="#">Henlo</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="previewSearch" style="height:300px">
            
            @*<a id="searchLink" asp-action="Movies" asp-controller="DetailPage" asp-route-id="">
                <p id="previewTitle"></p>
            </a>
                <img id="previewImg" src="" />*@
            
        </div>
    </Header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <address>
            <img src="~/images/email.svg"> <a href="mailto: hello@cmdb.nu">hello@cmdb.nu</a>
            <img src="~/images/phone.svg"> <a href="tel: 1111111">1111111</a>
        </address>
    </footer>
    
    <script src="~/js/search.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
